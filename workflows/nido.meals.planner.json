            "parameters": {
                "jsCode": "// Get all states from HA\nconst allStates = $input.all().map(item => item.json);\nconst catalogData = $('Load Catalog').first().json;\nconst catalog = catalogData.catalog;\nconst user_request = catalogData.user_request;\nconst chat_id = catalogData.chat_id;\n\n// Create a map of entity_id -> state\nconst stateMap = {};\nallStates.forEach(s => {\n  stateMap[s.entity_id] = s.state;\n});\n\n// Find available ingredients\nconst available = [];\ncatalog.forEach(product => {\n  const state = stateMap[product.entity_id];\n  if (state === 'on') {\n    available.push(product.display_name || product.name || product.id);\n  }\n});\n\n// Construct Prompt Context\nconst promptContext = `AVAILABLE INGREDIENTS:\n${available.length > 0 ? available.join(', ') : 'No ingredients with stock available'}\n`;\n\nreturn {\n  json: {\n    prompt_id: 'meals.planner',\n    chat_id,\n    input: {\n      input_type: 'TEXT',\n      input_text: user_request + '\\n\\n' + promptContext\n    }\n  }\n};"
            },
