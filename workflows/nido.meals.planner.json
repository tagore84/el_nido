            "parameters": {
                "jsCode": "const fs = require('fs');\n\n// Read Catalog\nlet catalog = [];\ntry {\n  const catalogPath = '/data/inventory/food_stock_catalog.json';\n  if (fs.existsSync(catalogPath)) {\n    catalog = JSON.parse(fs.readFileSync(catalogPath, 'utf8'));\n    if (catalog.products) catalog = catalog.products;\n  }\n} catch (e) {\n  throw new Error('Failed to read catalog: ' + e.message);\n}\n\n// Filter products that track stock (have entity_id)\nconst tracked = catalog.filter(p => p.entity_id);\n\n// Get trigger data\nconst triggerData = $input.first().json;\nconst user_request = triggerData.input?.input_text || triggerData.input_text || '';\nconst chat_id = triggerData.chat_id;\n\n// Return catalog items to check stock via Split In Batches + HA node\nreturn {\n  json: {\n    catalog: tracked,\n    user_request,\n    chat_id\n  }\n};"
            },
