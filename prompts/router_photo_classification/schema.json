{
    "type": "object",
    "properties": {
        "image_type": {
            "type": "string",
            "enum": [
                "whiteboard_calendar",
                "whiteboard_notes",
                "receipt",
                "document",
                "screenshot",
                "other"
            ]
        },
        "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "reason": {
            "type": "string"
        },
        "routing_hints": {
            "type": "object",
            "properties": {
                "month_suggestion": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "pattern": "^\\d{4}-\\d{2}$"
                }
            }
        }
    },
    "required": [
        "image_type",
        "confidence",
        "reason"
    ]
}